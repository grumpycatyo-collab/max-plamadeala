---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Callout from '../components/Callout.astro'
;
import { getCollection } from 'astro:content';

const allArticles = await getCollection('articles');
const allProjects = await getCollection('projects');

const sortedArticles = allArticles.sort(
  (a, b) => b.data.publishDate.getTime() - a.data.publishDate.getTime()
);
const recentArticles = sortedArticles.slice(0, 3); 

const sortedProjects = allProjects.sort(
  (a, b) => a.data.title.localeCompare(b.data.title)
);
const recentProjects = sortedProjects.slice(0, 3);
---

<Layout title="@grumpycatyo-collab">
	<Header />
	<main class="container">
		<section class="hero" style="text-align: left;">
			<h1>Hi! I'm Max ⭐</h1>
			<p class="subtitle">Software Engineer & Critical Thinker</p>
			<p class="description" style="margin: 0;">
				I like working and learning new stuff every day. Love social interactions and creating things all night long.
				<br>
				P.S: A minor detail about me: My mom calls me "Maxim" when angry, so please don't call me "Maxim"
			</p>

			<Callout href="/cv_maxim_plamadeala.pdf" text="CV" icon="lightbulb" target="_blank" rel="noopener noreferrer" />
		</section>
		
		<section class="recent-posts">
			<h2>Recent Articles</h2>
			{recentArticles.length > 0 ? (
			  <ul class="post-list">
				{recentArticles.map(article => (
				  <li>
					<span class="post-date">{article.data.publishDate.toISOString().split('T')[0]}</span>
					<a href={`/articles/${article.data.slug}`}>{article.data.title}</a>
				  </li>
				))}
			  </ul>
			  <a href="/articles" class="view-all">View all articles →</a>
			) : (
			  <p>None yet, but stay tuned!</p>
			)}
		  </section>
	</main>
</Layout>

<style>
  .hero {
    padding: 4rem 0;
    text-align: center;
  }

  h1 {
    font-size: 2.5rem;
    margin-bottom: 0.5rem;
  }

  .subtitle {
    font-size: 1.25rem;
    color: var(--accent-color);
    margin-bottom: 1.5rem;
  }

  .description {
    max-width: 600px;
    margin: 0 auto;
    font-size: 1.1rem;
    line-height: 1.6;
    color: var(--muted-color);
  }

  .recent-posts, .recent-projects {
    margin-top: 2rem;
  }

  .post-list, .project-list {
    list-style: none;
    padding: 0;
    margin: 2rem 0;
  }

  .post-list li, .project-list li {
    display: flex;
    padding: 1rem 0;
    border-bottom: 1px solid var(--border-color);
  }

  .post-list li {
    align-items: baseline;
  }

  .project-list li a {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
  }

  .post-date {
    font-family: 'Fira Code', monospace;
    font-size: 0.85rem;
    color: var(--muted-color);
    min-width: 110px;
    margin-right: 1.5rem;
  }

  .post-list a, .project-list a {
    color: var(--text-color);
    text-decoration: none;
    font-weight: 500;
    transition: color 0.2s;
  }

  .post-list a:hover, .project-list a:hover {
    color: var(--accent-color);
  }

  .project-description {
    font-size: 0.9rem;
    color: var(--muted-color);
    font-weight: normal;
  }

  .view-all {
    display: inline-block;
    margin-top: 1rem;
    color: var(--accent-color);
    text-decoration: none;
    font-size: 0.9rem;
    font-weight: 500;
  }

  @media (max-width: 600px) {
    .hero {
      padding: 2rem 0;
    }

    h1 {
      font-size: 2rem;
    }

    .post-list li {
      flex-direction: column;
      gap: 0.25rem;
    }

    .post-date {
      min-width: unset;
      margin-right: 0;
    }
  }
</style>